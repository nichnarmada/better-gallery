{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "better-gallery",
  "version": "0.1.0",
  "identifier": "com.better-gallery.app",
  "build": {
    "beforeDevCommand": "vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "better-gallery",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "fs": {},
    "shell": { "scope": ["bin/*"] }
  },
  "bundle": {
    "externalBin": ["bin/gg-sidecar*"],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
