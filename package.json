{
  "name": "better-gallery",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "sidecar:bundle": "bunx esbuild sidecars/pkg-entry.js --bundle --platform=node --format=cjs --outfile=sidecar.dist.js",
    "sidecar:pkg": "bunx @yao-pkg/pkg sidecar.dist.js --targets node20-macos-arm64,node20-macos-x64,node20-win-x64,node20-linux-x64 --assets \"node_modules/better-sqlite3/build/Release/better_sqlite3.node\" --output src-tauri/bin/gg-sidecar",
    "sidecar:post": "cp src-tauri/bin/gg-sidecar-macos-arm64 src-tauri/bin/gg-sidecar-aarch64-apple-darwin && cp src-tauri/bin/gg-sidecar-macos-x64 src-tauri/bin/gg-sidecar-x86_64-apple-darwin || true",
    "sidecar:build": "bun run sidecar:bundle && bun run sidecar:pkg && bun run sidecar:post",
    "dev": "bun run sidecar:build && tauri dev",
    "build": "bun run sidecar:build && tauri build",
    "preview": "vite preview",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write ."
  },
  "dependencies": {
    "@libsql/client": "^0.15.9",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.51.1",
    "@tanstack/react-table": "^8.21.3",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "2",
    "@tauri-apps/plugin-fs": "^2.4.0",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-shell": "^2.3.0",
    "autoprefixer": "^10.4.21",
    "better-sqlite3": "^12.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.44.2",
    "exiftool-vendored": "^30.3.0",
    "lucide-react": "^0.525.0",
    "next-themes": "^0.4.6",
    "onnxruntime-node": "^1.22.0-rev",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^1.8.11",
    "sharp": "^0.34.2",
    "sonner": "^2.0.5",
    "sqlite-vss": "^0.1.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "zod": "^3.25.67",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.7",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@yao-pkg/pkg": "^6.5.1",
    "dotenv": "^16.6.1",
    "drizzle-kit": "^0.31.4",
    "prettier": "3.6.2",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.4",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "esbuild": "^0.21.3"
  }
}
